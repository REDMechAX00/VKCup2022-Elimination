<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/answer_choicer_text_question_title"
        style="@style/AnswerChoicerQuestionTextTitle" />

    <LinearLayout
        android:id="@+id/answer_choicer_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/answer_choicer_button_indent_small"
        android:layout_marginBottom="@dimen/answer_choicer_button_indent_small"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/answer_choicer_text_count_of_answers"
        style="@style/AnswerChoicerQuestionTextCountOfAnswers" />

</LinearLayout>